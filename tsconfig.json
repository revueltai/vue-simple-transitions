{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "DOM",
      "ES2020"
    ],
    "target": "es2020",
    "module": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "package/types/*"
      ]
    },
    "declaration": true
  },
  "include": [
    "package/**/*"
  ]
}
